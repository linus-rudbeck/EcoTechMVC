@{
    ViewData["Title"] = "Kontakta oss";
}

<div class="container mt-5">
    <h1 class="mb-4">Kontakta oss</h1>
    <div class="row">
        <div class="col-md-6">
            <h3>Kontaktinformation</h3>
            <p><strong>E-post:</strong> <a href="mailto:info@ecotechsolutions.se">info@ecotechsolutions.se</a></p>
            <p><strong>Telefon:</strong> +46 123 456 789</p>
            <p><strong>Adress:</strong> Västra Gatan 1, 123 45 Stockholm, Sverige</p>
            <div class="mb-3">
                <h3>Hitta oss här:</h3>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d25204.210569167218!2d18.0632407!3d59.3345915!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x465f9d6d7e82aef9%3A0x400af0f6615eaa0!2sStockholm!5e0!3m2!1ssv!2sse!4v1627558085241!5m2!1ssv!2sse" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
        <div class="col-md-6">
            <h3>Kontaktformulär</h3>
            <form asp-action="PostContact" asp-controller="Home" method="post">
                <div class="mb-3">
                    <label for="Name" class="form-label">Namn</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Ditt namn">
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label">E-post</label>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Din e-post">
                </div>
                <div class="mb-3">
                    <label for="Phone" class="form-label">Telefon</label>
                    <input type="tel" class="form-control" id="Phone" name="Phone" placeholder="Ditt telefonnummer">
                </div>
                <div class="mb-3">
                    <label for="Message" class="form-label">Meddelande</label>
                    <textarea class="form-control" id="Message" name="Message" rows="4" placeholder="Ditt meddelande"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Skicka</button>
            </form>
        </div>
    </div>
</div>
